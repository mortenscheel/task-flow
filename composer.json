{
    "name": "mortenscheel/task-flow",
    "description": "Pipeline for nested console tasks",
    "license": "MIT",
    "keywords": [
        "php",
        "console",
        "pipeline",
        "renderer"
    ],
    "authors": [
        {
            "name": "Morten Scheel",
            "email": "morten@mortenscheel.com"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "ext-mbstring": "*",
        "symfony/console": "^7.2"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.18.3",
        "nunomaduro/collision": "^8.5",
        "orchestra/testbench": "^9.9",
        "pestphp/pest": "^3.7.1",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.2.3",
        "phpro/grumphp-shim": "^2.10",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0.4",
        "symfony/var-dumper": "^7.2.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Scheel\\TaskFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scheel\\TaskFlow\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpro/grumphp-shim": true,
            "phpstan/extension-installer": true
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "TaskFlow": "Scheel\\TaskFlow\\Facades\\TaskFlow"
            },
            "providers": [
                "Scheel\\TaskFlow\\TaskFlowServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-create-project-cmd": "@php ./init.php",
        "fix": [
            "rector",
            "pint",
            "@test:phpstan",
            "@test:pest"
        ],
        "rector": "rector",
        "test": [
            "@test:rector",
            "@test:pint",
            "@test:phpstan",
            "@test:pest"
        ],
        "test:pest": [
            "@putenv XDEBUG_MODE=coverage",
            "pest --colors=always --parallel --coverage --min=100"
        ],
        "test:phpstan": "phpstan analyse --ansi --memory-limit=-1",
        "test:pint": "pint --test",
        "test:rector": "rector --dry-run"
    }
}
